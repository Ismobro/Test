<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="AvaloniaApplication1"
        Width = "400" Height = "450">

    
        <StackPanel> <!-- base size -->
            
            <TextBlock HorizontalAlignment="Center" Padding = "10">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.RenderTransform>
                Add a task!
            </TextBlock>

            <TextBlock Name="Tasks" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Button Name="Add_Task" Click="Add_Click" HorizontalAlignment="Left">Add task</Button>
            <Button Name="Remove_Task" Click="Remove_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom">Remove a task</Button>

        </StackPanel>
    
</Window>

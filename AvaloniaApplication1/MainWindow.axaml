<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="AvaloniaApplication1">
    
        <StackPanel>
                
                <TextBlock HorizontalAlignment="Center">Add a task!</TextBlock>
              
                <TextBlock Name="Tasks" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
                <Button Name = "Add_Task" Click = "Add_Click" HorizontalAlignment="Center">Add task</Button>
                <Button Name="Remove_Task" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Remove_Click">Remove a task</Button>

<!--Two stackpanels, one for interaction another for ui-->
              
        </StackPanel>
    
    
</Window>
